// prisma/schema.prisma (updated)

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  output        = "../app/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Package {
  id          String          @id @default(cuid())
  name        String
  days        Int
  nights      Int
  description String          @default("No description available.")
  image       String? // optional image
  price       Decimal         @db.Decimal(12, 2)
  type        String?
  location    String?
  inclusions  IncludedItems[]
  exclusions  ExcludedItems[]
  itineraries DayItinerary[]
  bookings    Bookings[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([createdAt])
}

model Bookings {
  id             String    @id @default(cuid())
  customerName   String
  customerEmail  String
  customerPhone  String
  numberOfPeople Int
  paid           Boolean   @default(false)
  // removed ambiguous paymentId field (payments are in Payment model)
  payment        Payment[]
  package        Package   @relation(fields: [packageId], references: [id], onDelete: Cascade)
  packageId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([packageId])
}

model Payment {
  id                String   @id @default(cuid())
  amount            Decimal  @db.Decimal(12, 2)
  paid              Boolean  @default(false)
  paymentMethod     String
  razorpayPaymentId String?
  paymentDate       DateTime @default(now())
  booking           Bookings @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  bookingId         String

  createdAt DateTime @default(now())

  @@index([bookingId])
}

model DayItinerary {
  id          String          @id @default(cuid())
  title       String          @default("No title available.")
  dayNumber   Int
  description String          @default("No description available.")
  features    FeaturedItems[]
  package     Package         @relation(fields: [packageId], references: [id], onDelete: Cascade)
  packageId   String

  @@unique([packageId, dayNumber]) // ensures one entry per day number per package
  @@index([packageId])
}

model FeaturedItems {
  id             String       @id @default(cuid())
  item           String
  dayItinerary   DayItinerary @relation(fields: [dayItineraryId], references: [id], onDelete: Cascade)
  dayItineraryId String

  @@index([dayItineraryId])
}

model IncludedItems {
  id        String  @id @default(cuid())
  item      String
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  packageId String

  @@index([packageId])
}

model ExcludedItems {
  id        String  @id @default(cuid())
  item      String
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  packageId String

  @@index([packageId])
}

model Blogs {
  id           String         @id @default(cuid())
  title        String
  html         String
  thumbnail    String?
  categories   BlogCategory[] // implicit many-to-many
  customerName String?
  feedback     String?
  images       BlogImages[]
  author       String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([createdAt])
}

model BlogImages {
  id     String @id @default(cuid())
  url    String
  blog   Blogs  @relation(fields: [blogId], references: [id], onDelete: Cascade)
  blogId String

  @@index([blogId])
}

model BlogCategory {
  id    String  @id @default(cuid())
  name  String  @unique
  blogs Blogs[] // implicit many-to-many

  @@index([name])
}

model Destinations {
  id              String           @id @default(cuid())
  name            String
  tag             String?
  title           String?          @default("No title available.")
  description     String           @default("No description available.")
  places          Places[]
  image           String?
  country         String
  visa            String?
  languagesSpoken String?
  currency        String?
  faqs            DestinationFAQ[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([country])
  @@index([createdAt])
}

model Places {
  id            String       @id @default(cuid())
  name          String
  image         String?
  description   String       @default("No description available.")
  destination   Destinations @relation(fields: [destinationId], references: [id], onDelete: Cascade)
  destinationId String

  @@index([destinationId])
}

model DestinationFAQ {
  id            String       @id @default(cuid())
  question      String
  answer        String
  destination   Destinations @relation(fields: [destinationId], references: [id], onDelete: Cascade)
  destinationId String

  @@index([destinationId])
}

model Testimonials {
  id           String   @id @default(cuid())
  customerName String
  feedback     String
  rating       Int
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


model PaymentModel {
  id                String   @id @default(cuid())
  amount            Float
  paid              Boolean  @default(false)
  customerEmail     String
  customerName      String
  customerId       String
  customerPhone     String
  paymentMethod     String?
  razorpayPaymentId String?
  paymentDate       DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([customerId])
}